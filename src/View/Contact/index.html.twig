{% extends 'layout.html.twig' %}

{% block titre_de_page %}Contact{% endblock %}
{% block banner %}banner2{% endblock %}
{% block content %}
<div class="container-fluid">
    <div class="row justify-content-around">
        <div class="col-md-4">
            <form method="post" action="">
                    <ul>
                        {% for error in errors %}
                            <li class="errorsForm">{{ error }}</li>
                        {% endfor %}
                    </ul>
                <div class="form-group">

                    <input class="form-control" id="lastName" type="text" name="lastName" value="{{ values.lastName }}" placeholder="Votre nom *" required>
                </div>
                <div class="form-group">
                    <input class="form-control" id="email" type="email" name="email" value="{{ values.email }}" placeholder="Votre Email *" required>
                </div>
                <div class="form-group">
                    <label class="selectSujet">
                        <select class="form-control" id="subject" name="subject" >
                            <option value="Privatiser la JAVAPOP">Privatiser la JAVAPOP</option>
                            <option value="Organiser un concert">Organiser un concert</option>
                            <option value="Animation sur demande">Animation sur demande</option>
                            <option value="Autre sujet">Autre sujet</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <textarea class="form-control messageForm" name="message" id="message" placeholder="Votre Message *" required>{{ values.message }}</textarea>
                </div>
                <button id="sendMessageButton" class="btn btn-primary btn-primary-contact btn-xl text-uppercase btn-form" type="submit">Envoyer</button>
            </form>
        </div>
        <div class="col-md-5 prestation">
            <ul class="list-unstyled">
                <li class="media">
                    <img class="mr-3" src="http://www.javapop.fr/ressources/img/event_location.jpg" height="150px" alt="Generic placeholder image">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1">Privatiser La JAVAPOP</h5>
                    </div>
                </li>
                <li class="media my-4">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1 text-right">Organiser un concert</h5>
                    </div>
                    <img class="ml-3" src="http://www.javapop.fr/ressources/img/event_concert.jpg" height="150px" alt="Generic placeholder image">
                </li>
                <li class="media bo">
                    <img class="mr-3" src="http://www.javapop.fr/ressources/img/event_insolite.jpg" height="150px" alt="Generic placeholder image">
                    <div class="media-body border-media">
                        <h5 class="mt-0 mb-1">Animation sur demande</h5>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
