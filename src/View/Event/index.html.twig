{% extends 'layout.html.twig' %}

{% block title %}Évènements{% endblock %}

{% block banner %}banner1{% endblock %}

{% block titre_de_page %}EVENEMENTS{% endblock %}

{% block content %}

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        {% for event in events %}
                            <li>
                                <div class="timeline-image">
                                    <img class="rounded-circle img-fluid" src="assets/images/about/{{ random(8) }}.jpg"
                                         alt="">
                                </div>
                                {% if loop.index is even %}
                                    <div class="col">
                                        <div class="timeline-panel ">
                                            <div class="timeline-heading">
                                                <h4>{{ event.date|date('d/m/Y') }}</h4>
                                                <h4 class="subheading">{{ event.title }}</h4>
                                            </div>
                                            <div class="timeline-body">
                                                <p>{{ event.comment }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="panel-right">
                                        <div class="panelright">
                                            <div class="timeline-heading">
                                                <h4>{{ event.date|date('d/m/Y') }}</h4>
                                                <h4 class="subheading">{{ event.title }}</h4>
                                            </div>
                                            <div class="timeline-body">
                                                <p>{{ event.comment }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
