
{% extends 'layout.html.twig' %}

{% block title %}Eventadmin{% endblock %}
{% block banner %}banner2{% endblock %}
{% block titre_de_page %}Administration <br/>des événements{% endblock %}




 {% block content %}
     <div class="row">
         <p class=" btn-primary offset-1 col-4 d-flex justify-content-center"><a href="/admin/eventAdmin/add">Ajouter un événement</a> </p>
     </div>
     <div class="row d-flex justify-content-center ">
         <table class="adminTable text-primary table-bordered col-10 text-center">
             <thead >
             <tr>
                 <th scope="col">Titre</th>
                 <th scope="col">Date</th>
                 <th scope="col">Description</th>
                 <th></th>
                 <th></th>
             </tr>
             </thead>
             <tbody>
             {% for event in events %}
             <tr>
                 <td>{{ event.title }}</td>
                 <td>{{ event.date|date("d/m/Y") }}</td>
                 <td>{{ event.comment }}</td>
                 <td class="p-3"><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal{{ event.id }}">Supprimer</button>
                     <div class="modal fade" id="Modal{{ event.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                         <div class="modal-dialog modal-dialog-centered" role="document">
                             <div class="modal-content">
                                 <div class="modal-header">
                                     <h5 class="modal-title pl-1" id="exampleModalLabel">Confirmation de la suppression</h5>
                                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                         <span aria-hidden="true">&times;</span>
                                     </button>
                                 </div>
                                 <div class="modal-body">
                                     <p class="modal-text">Souhaitez-vous vraiment supprimer: {{ event.title }} à la date du {{ event.date|date("d/m/Y")}} ?</p>
                                 </div>
                                 <div class="modal-footer">
                                     <form action="" method="post" role="form">
                                         <input type="hidden" name="deleteEvent" value="{{ event.id }}">
                                         <button type="submit" class="btn btn-danger" name="delete">Supprimer</button>
                                         <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler
                                         </button>
                                     </form>
                                 </div>
                             </div>
                         </div>
                     </div>

                 </td>
                 <td class="p-3"><a href="/admin/eventAdmin/update/{{ event.id }}" class="btn btn-warning">Modifier</a></td>
             </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>

 {% endblock %}

