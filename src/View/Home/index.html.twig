                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger mr-1 ml-1" style="width: 220px; height: 69px;" href="/artist">Artistes</a>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger mr-1 ml-1" style="width: 220px; height: 69px;" href="/event">Ev√®nements</a>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger mr-1 ml-1" style="width: 220px; height: 69px;" href="/location">Nous trouver</a>
            </div>
        </div>
    </div>
{% endblock %}
